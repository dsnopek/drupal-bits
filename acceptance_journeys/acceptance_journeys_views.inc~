<?php

/**
 * @file
 * Defines the View Style Plugins for Acceptance Journeys module.
 */

/**
 * Implements hook_views_plugins().
 */
function views_slideshow_views_plugins() {
  return array(
    'style' => array(
      'slideshow' => array(
        'title' => t('Grid Slideshow'),
        'help' => t('Display the results as a grid slideshow.'),
        'handler' => 'acceptance_journeys_plugin_style_slideshow',
        'uses options' => TRUE,
        'uses row plugin' => TRUE,
        'uses grouping' => FALSE,
        'uses row class' => TRUE,
        'type' => 'normal',
        'parent' => 'list',
        'path' => drupal_get_path('module', 'acceptance_journeys'),
        'theme' => 'acceptance_journeys',
        'theme path' => drupal_get_path('module', 'acceptance_journeys') . '/theme',
        'theme file' => 'acceptance_journeys.theme.inc',
      ),
    ),
  );
}